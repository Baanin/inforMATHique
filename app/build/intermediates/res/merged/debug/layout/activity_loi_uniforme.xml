<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.informathique.LoiUniforme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intervalle [a;b]"
        android:id="@+id/intervalle"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ValueA"
        android:layout_below="@+id/intervalle"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/btnCalculdeF"
        android:layout_alignRight="@+id/intervalle"
        android:layout_alignEnd="@+id/intervalle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ValueB"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/btnCalculdeF"
        android:layout_alignRight="@+id/ValueA"
        android:layout_alignEnd="@+id/ValueA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcul de f"
        android:id="@+id/btnCalculdeF"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperance"
        android:id="@+id/btnCalcEsperance"
        android:layout_alignTop="@+id/btnCalculdeF"
        android:layout_alignRight="@+id/ValueA"
        android:layout_alignEnd="@+id/ValueA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur de x"
        android:id="@+id/x"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ValueX"
        android:layout_alignTop="@+id/x"
        android:layout_alignRight="@+id/ValueA"
        android:layout_alignEnd="@+id/ValueA"
        android:layout_alignLeft="@+id/ValueA"
        android:layout_alignStart="@+id/ValueA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur de a :"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/ValueA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur de b :"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/ValueB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valeur_de_b"
        android:id="@+id/Resultat"
        android:layout_marginTop="60dp"
        android:layout_marginRight="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnCalculdeF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnCalcEsperance"
        android:layout_toStartOf="@+id/btnCalcEsperance" />

</RelativeLayout>
